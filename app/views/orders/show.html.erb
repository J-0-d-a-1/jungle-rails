<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>


  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @order.line_items.each do |line_item| %>
    <% product = line_item.product %>
      <tr>
        <td><%= image_tag product.image.url, width: 100 %></td>
        <td>
          <h4><%= product.name %></h4>
          <br>
          <p><%= product.description %></p>
        </td>
        <td><%= humanized_money_with_symbol(product.price_cents / 100.0) %></td>
        <td><%= line_item.quantity %></td>
        <td><%= humanized_money_with_symbol(line_item.total_price_cents / 100.0) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h4>Total: <%= humanized_money_with_symbol(@order.total_cents / 100.0) %></h4>

  <h4>Yor email: <%= @order.email %></h4>
    
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
    
</section>
  