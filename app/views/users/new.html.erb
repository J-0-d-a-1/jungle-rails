<section class="users-new">
  <header class="page-header">
    <h1>Signup</h1>
  </header>

  <%= form_with model: @user, url: users_path, local: true do |form| %>
    
    <div class="mb-3">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control' %>
      <% if @user.errors[:first_name].any? %>
        <div class="alert alert-danger">
          <%= "First name #{@user.errors[:first_name].join(', ')}" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control' %>
      <% if @user.errors[:last_name].any? %>
        <div class="alert alert-danger">
          <%= "Last name #{@user.errors[:last_name].join(', ')}" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
      <% if @user.errors[:email].any? %>
        <div class="alert alert-danger">
          <%= "Email #{@user.errors[:email].join(', ')}" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>
      <% if @user.errors[:password].any? %>
        <div class="alert alert-danger">
          <%= "Password #{@user.errors[:password].join(', ')}" %>
        </div>
      <% end %>
    </div>
    
    <div class="mb-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
      <% if @user.errors[:password_confirmation].any? %>
        <div class="alert alert-danger">
          <%= "Password confirmation #{@user.errors[:password_confirmation].join(', ')}" %>
        </div>
      <% end %>
    </div>
      
    <%= form.submit 'Sign Up', class: 'btn btn-primary' %>

  <% end %>

</section>