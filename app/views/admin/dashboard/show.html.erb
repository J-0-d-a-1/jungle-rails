<header class="page-header">
  <h1>Admin &raquo; Dashboard</h1>
</header>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        Products
      </div>
      <div class="card-body">
        <h5 class="card-title">Total Products: <%= @products.count %></h5>
        <%= link_to 'All Products', [:admin, :products], class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        Categories
      </div>
      <div class="card-body">
        <h5 class="card-title">Total Categories: <%= @categories.count %></h5>
        <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>